<!doctype HTML>
<html>
  <head>
    <title>New Task | TODO List</title>
  </head>
  <body>
    <form action="/create_task" method="post">
      <div>
        <input type="text" name="content" placeholder="Add a content" />
      </div>
      <div>
        <label for="completed"> Is the task completed?</label><br />
        <input type="radio" name="completed" value="no" checked>No
        <input type="radio" name="completed" value="yes">Yes
      </div>
      <div>
        <button type="submit">Create</button>
      </div>
    </form>
  </body>
</html>
